# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (if needed)
DATABASE_URL=

# Zoho CRM
ZOHO_API_KEY=your_zoho_api_key_here
ZOHO_BASE_URL=https://www.zohoapis.com/crm/v2

# Gmail API
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3000/auth/gmail/callback

# Google Calendar
GOOGLE_CALENDAR_API_KEY=your_calendar_api_key_here

# Chatwork
CHATWORK_API_TOKEN=your_chatwork_api_token_here
CHATWORK_BASE_URL=https://api.chatwork.com/v2

# CloudSign (Sales)
CLOUDSIGN_API_KEY=your_cloudsign_api_key_here
CLOUDSIGN_BASE_URL=https://api.cloudsign.jp

# GMO Sign (Training)
GMO_SIGN_API_KEY=your_gmo_sign_api_key_here
GMO_SIGN_BASE_URL=https://api.gmosign.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@dandori-work.com
SMTP_PASS=your_app_password_here
DEFAULT_BCC_SALES=sales@dandori-work.com
DEFAULT_BCC_TRAINING=training@dandori-work.com

# Quiet Hours Configuration
QUIET_HOURS_EMAIL_START=20
QUIET_HOURS_EMAIL_END=8
QUIET_HOURS_SMS_START=21
QUIET_HOURS_SMS_END=8
TIMEZONE=Asia/Tokyo

# Feature Flags
USE_MOCK_ADAPTERS=true
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_EMAILS_PER_HOUR=100
MAX_SMS_PER_DAY=500

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=